extends layout

block content
    h3 Sentinel Server
    each sentinel in sentinels
        div(class=['panel', 'panel-info'])
            div(class="panel-heading") #{sentinel.address}
            div(class="panel-body")
                div(class="container-fluid")
                    div(class="row")
                        div(class="col-md-6")
                            label Version：
                            span #{sentinel.version}
                        div(class="col-md-6")
                            label process ID：
                            span #{sentinel.process_id}
                    div(class="row")
                        div(class="col-md-6")
                            label Uptime：
                            span #{sentinel.uptime}
                        div(class="col-md-6")
                            label Pending Commands：
                            span #{sentinel.pending_cmds}

    h3 Redis Server
    each redis in redises
        - var isMaster = redis.role === 'master'
        div(class=['panel', 'panel-success'])
            div(class="panel-heading")
                span #{redis.address}
                label(class=isMaster ? "label label-primary" : "label label-info") #{redis.role}
            div(class="panel-body")
                div(class="container-fluid")
                    div(class="row")
                        div(class="col-md-6")
                            label Version：
                            span #{redis.version}
                        div(class="col-md-6")
                            label Process ID：
                            span #{redis.process_id}
                    div(class="row")
                        div(class="col-md-6")
                            label Uptime：
                            span #{redis.uptime}
                        div(class="col-md-6")
                            label Used Memory：
                            span #{redis.used_memory}
                    div(class="row")
                        div(class="col-md-6")
                            label Memory Allocator：
                            span #{redis.mem_allocator}
                        div(class="col-md-6")
                            label Memory Fragmentation Ratio：
                            span #{redis.mem_fragmentation_ratio}
                    div(class="row")
                        div(class="col-md-6")
                            label Used CPU time：
                            span #{redis.used_cpu_sys} second
                        div(class="col-md-6")
                            label Used user mode CPU time：
                            span #{redis.used_cpu_user} second
                    div(class="row")
                        div(class="col-md-6")
                            label Background child process state system CPU time：
                            span #{redis.used_cpu_sys_children} second
                        div(class="col-md-6")
                            label Background child process user mode CPU time：
                            span #{redis.used_cpu_user_children} second
                    div(class="row")
                        div(class="col-md-6")
                            label Pending commands：
                            span #{redis.pending_cmds}
                        div(class="col-md-6")
                            label Used memory peak：
                            span #{redis.used_memory_peak}
                    div(class="row")
                        div(class="col-md-6")
                            label Total Connections Received：
                            span #{redis.total_connections_received}
                        div(class="col-md-6")
                            label Rejected Connections：
                            span #{redis.rejected_connections}
                    div(class="row")
                        div(class="col-md-6")
                            label Total commands processed：
                            span #{redis.total_commands_processed}
                        div(class="col-md-6")
                            label instantaneous operations per second：
                            span #{redis.instantaneous_ops_per_sec}
                    div(class="row")
                        div(class="col-md-6")
                            label Keyspace hits：
                            span #{redis.keyspace_hits}
                        div(class="col-md-6")
                            label Keyspace misses：
                            span #{redis.keyspace_misses}
                    div(class="row")
                        div(class="col-md-6")
                            label Hit rate：
                            span #{redis.hit_rate}